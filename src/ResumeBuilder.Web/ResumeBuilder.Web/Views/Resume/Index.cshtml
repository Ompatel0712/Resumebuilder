@model IEnumerable<ResumeBuilder.Application.DTOs.ResumeDto>

@{
    ViewData["Title"] = "My Resumes";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold">My Resumes</h1>
            <p class="text-muted">Manage your generated resumes and AI matches.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i> Create New Resume
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-3">
            <div class="mb-3">
                <i class="fas fa-file-alt fa-3x text-muted"></i>
            </div>
            <h3>No resumes found</h3>
            <p class="text-muted text-center">You haven't created any resumes yet. Start building your professional resume now!</p>
            <a asp-action="Create" class="btn btn-primary mt-3">Get Started</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var resume in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@resume.Title</h5>
                            <p class="card-text text-muted small">
                                <i class="far fa-clock me-1"></i> Created: @resume.CreatedAt.ToString("MMM dd, yyyy")
                            </p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge bg-info text-dark">
                                    <i class="fas fa-robot me-1"></i> @(resume.JobMatches?.Count ?? 0) AI Matches
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 pt-0 pb-3">
                            <div class="d-grid gap-2">
                                <a asp-action="Preview" asp-route-id="@resume.ResumeId" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i> Preview & Download
                                </a>
                                <div class="d-flex gap-2">
                                    <a asp-action="DownloadPdf" asp-route-id="@resume.ResumeId" class="btn btn-outline-secondary btn-sm flex-grow-1">
                                        <i class="fas fa-file-pdf me-1"></i> PDF
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@resume.ResumeId" method="post" class="flex-grow-1" onsubmit="return confirm('Are you sure you want to delete this resume?');">
                                        <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                            <i class="fas fa-trash-alt me-1"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
