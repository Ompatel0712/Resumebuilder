@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Smart Resume Builder</h1>
    <p>Build your professional resume and get AI-powered job matching insights.</p>
    
    <div class="mt-4">
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary btn-lg mx-2">Go to Dashboard</a>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg mx-2">Login</a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-secondary btn-lg mx-2">Register</a>
        }
    </div>
</div>
