@model ResumeBuilder.Web.ViewModels.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - Smart Resume Builder</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; background: #f8fafc; display: flex; align-items: center; justify-content: center; height: 100vh; margin: 0; }
        .auth-card { background: white; padding: 2.5rem; border-radius: 1rem; box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1); width: 100%; max-width: 450px; }
        .brand { text-align: center; margin-bottom: 2rem; font-weight: 700; font-size: 1.5rem; color: #4f46e5; }
        .form-control { padding: 0.6rem 0.75rem; border-radius: 0.5rem; border: 1px solid #e2e8f0; }
        .btn-primary { background: #4f46e5; border: none; padding: 0.75rem; border-radius: 0.5rem; font-weight: 600; width: 100%; }
    </style>
</head>
<body>
    <div class="auth-card">
        <div class="brand">Smart Resume Builder</div>
        <h5 class="text-center mb-4">Create Account</h5>
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
            <div class="mb-3">
                <label asp-for="FullName" class="form-label small fw-bold">Full Name</label>
                <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label small fw-bold">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Password" class="form-label small fw-bold">Password</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ConfirmPassword" class="form-label small fw-bold">Confirm</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="••••••••" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mb-3">Join Now</button>
            <div class="text-center small">
                Already have an account? <a asp-action="Login" class="text-primary text-decoration-none">Sign In</a>
            </div>
        </form>
    </div>
</body>
</html>
