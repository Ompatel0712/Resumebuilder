@model IEnumerable<ResumeBuilder.Application.DTOs.JobRoleDto>
@{
    ViewData["Title"] = "Manage Job Roles";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="page-title">Manage Job Roles</h1>
        <p class="text-muted mb-0">Define required skills and roles for AI matching.</p>
    </div>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRoleModal">
        <i class="fas fa-plus me-2"></i>Add New Role
    </button>
</div>

<div class="custom-card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th class="ps-4">Role Name</th>
                    <th>Category</th>
                    <th>Experience</th>
                    <th>Required Skills</th>
                    <th>Status</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model) {
                    <tr>
                        <td class="ps-4 fw-semibold">@role.RoleName</td>
                        <td>@role.Category</td>
                        <td><span class="badge bg-light text-dark">@role.ExperienceLevel</span></td>
                        <td>
                            @foreach (var skill in role.RequiredSkills.Split(',')) {
                                <span class="badge bg-primary-subtle text-primary border border-primary-subtle me-1">@skill.Trim()</span>
                            }
                        </td>
                        <td>
                            @if (role.IsActive) {
                                <span class="badge bg-success-subtle text-success">Active</span>
                            } else {
                                <span class="badge bg-secondary-subtle text-secondary">Inactive</span>
                            }
                        </td>
                        <td class="text-end pe-4">
                            <form asp-action="ToggleJobRoleStatus" asp-route-id="@role.JobRoleId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-light" title="Toggle Status">
                                    <i class="fas @(role.IsActive ? "fa-toggle-on text-success" : "fa-toggle-off")"></i>
                                </button>
                            </form>
                            <button class="btn btn-sm btn-light text-danger ms-1" onclick="confirmDelete(@role.JobRoleId)">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add Role Modal -->
<div class="modal fade" id="addRoleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-bottom py-3">
                <h5 class="modal-title fw-bold">Add Job Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreateJobRole" method="post">
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold small">Role Name</label>
                        <input name="RoleName" class="form-control" required placeholder="e.g. Senior Backend Developer" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold small">Skills (comma separated)</label>
                        <textarea name="RequiredSkills" class="form-control" rows="3" required placeholder="C#, SQL, ASP.NET Core"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold small">Category</label>
                            <select name="Category" class="form-select">
                                <option>Software Development</option>
                                <option>Data Science</option>
                                <option>Design</option>
                                <option>Management</option>
                            </select>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold small">Experience</label>
                            <select name="ExperienceLevel" class="form-select">
                                <option>Entry</option>
                                <option>Mid</option>
                                <option>Senior</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-top p-3">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Role</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: 'Delete Rule?',
                text: "AI matching will no longer use this role.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                confirmButtonText: 'Yes, delete it'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Form submission for delete would go here
                }
            });
        }
    </script>
}
