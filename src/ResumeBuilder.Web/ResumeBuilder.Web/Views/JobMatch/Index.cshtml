@model IEnumerable<ResumeBuilder.Application.DTOs.ResumeDto>
@{
    ViewData["Title"] = "AI Job Matching";
}

<div class="page-header mb-4">
    <h1 class="page-title">AI Job Matching</h1>
    <p class="text-muted mb-0">Select a resume to analyze your alignment with current market roles.</p>
</div>

@if (!Model.Any()) {
    <div class="text-center py-5 bg-white rounded-4 border shadow-sm">
        <div class="mb-3 text-muted"><i class="fas fa-file-invoice fa-4x opacity-25"></i></div>
        <h4>No Resumes Found</h4>
        <p class="text-muted">You need to build a resume before we can analyze job matches.</p>
        <a asp-controller="Resume" asp-action="Create" class="btn btn-primary">Build Your First Resume</a>
    </div>
} else {
    <div class="row g-4">
        @foreach (var resume in Model) {
            <div class="col-md-6 col-lg-4">
                <div class="custom-card shadow-sm h-100">
                    <div class="card-body p-4 d-flex flex-column">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary-subtle text-primary p-3 rounded-3 me-3">
                                <i class="fas fa-file-alt fa-lg"></i>
                            </div>
                            <div>
                                <h5 class="mb-0">@resume.Title</h5>
                                <small class="text-muted">Updated @resume.UpdatedAt.ToString("MMM dd")</small>
                            </div>
                        </div>
                        <p class="text-muted small flex-grow-1">Analyze this resume against system-defined job roles to see matching scores and skill gaps.</p>
                        <div class="mt-3">
                            <a asp-action="Matches" asp-route-resumeId="@resume.ResumeId" class="btn btn-outline-primary w-100">
                                <i class="fas fa-bolt me-2"></i>Analyze Match
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
