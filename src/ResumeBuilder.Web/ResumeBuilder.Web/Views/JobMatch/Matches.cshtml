@model IEnumerable<ResumeBuilder.Application.DTOs.JobMatchDto>
@{
    var resume = ViewBag.Resume as ResumeBuilder.Application.DTOs.ResumeDto;
    ViewData["Title"] = "Match Analysis";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-1">
                <li class="breadcrumb-item"><a asp-action="Index">Job Matching</a></li>
                <li class="breadcrumb-item active">Analysis</li>
            </ol>
        </nav>
        <h1 class="page-title">Analysis for "@resume?.Title"</h1>
    </div>
    <form asp-action="RefreshMatches" asp-route-resumeId="@resume?.ResumeId" method="post">
        <button type="submit" class="btn btn-outline-primary">
            <i class="fas fa-sync-alt me-2"></i>Recalculate
        </button>
    </form>
</div>

@if (!Model.Any()) {
    <div class="alert alert-info border-0 shadow-sm rounded-4 p-4">
        <div class="d-flex">
            <i class="fas fa-info-circle fa-2x me-3"></i>
            <div>
                <h5 class="alert-heading">No Matches Found Yet</h5>
                <p class="mb-0">Our AI engine couldn't find any job roles that align with your current skills. Try adding more specific skills to your resume.</p>
            </div>
        </div>
    </div>
} else {
    <div class="row g-4">
        @foreach (var match in Model.OrderByDescending(m => m.MatchScore)) {
            <div class="col-12">
                <div class="custom-card shadow-sm">
                    <div class="row g-0">
                        <div class="col-md-4 bg-light border-end p-4 text-center d-flex flex-column justify-content-center">
                            <div class="display-4 fw-bold text-primary mb-0">@match.MatchScore.ToString("F0")%</div>
                            <div class="text-muted fw-semibold">Match Score</div>
                            <div class="mt-3">
                                @if (match.MatchScore >= 80) { <span class="badge bg-success">Perfect Fit</span> }
                                else if (match.MatchScore >= 50) { <span class="badge bg-warning text-dark">Good Candidate</span> }
                                else { <span class="badge bg-secondary">Skill Gap Present</span> }
                            </div>
                        </div>
                        <div class="col-md-8 p-4">
                            <h4 class="fw-bold mb-1">@match.JobRoleName</h4>
                            <p class="text-muted small mb-4">@match.JobRoleDescription</p>
                            
                            <div class="row g-4">
                                <div class="col-6">
                                    <h6 class="fw-bold small text-uppercase text-success"><i class="fas fa-check-circle me-1"></i> Matched Skills</h6>
                                    <div class="d-flex flex-wrap gap-1 mt-2">
                                        @foreach (var skill in match.MatchedSkills) {
                                            <span class="badge bg-success-subtle text-success border border-success-subtle">@skill</span>
                                        }
                                        @if (!match.MatchedSkills.Any()) { <span class="text-muted small italic text-decoration-line-through">None</span> }
                                    </div>
                                </div>
                                <div class="col-6">
                                    <h6 class="fw-bold small text-uppercase text-danger"><i class="fas fa-exclamation-triangle me-1"></i> Missing Skills</h6>
                                    <div class="d-flex flex-wrap gap-1 mt-2">
                                        @foreach (var skill in match.MissingSkills) {
                                            <span class="badge bg-danger-subtle text-danger border border-danger-subtle">@skill</span>
                                        }
                                        @if (!match.MissingSkills.Any()) { <span class="text-muted small italic">None - Complete Match!</span> }
                                    </div>
                                </div>
                            </div>

                            <div class="mt-4 p-3 bg-light rounded-3 border-start border-primary border-4">
                                <h6 class="fw-bold small mb-1">AI Recommendation:</h6>
                                <p class="small text-dark mb-0">
                                    @if (match.MissingSkills.Any()) {
                                        @:To increase your chances for this role, we recommend taking a certification in <strong>@match.MissingSkills.First()</strong>.
                                    } else {
                                        @:You are a top-tier candidate for this role! Ensure your portfolio highlights your <strong>@match.MatchedSkills.FirstOrDefault()</strong> expertise.
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
